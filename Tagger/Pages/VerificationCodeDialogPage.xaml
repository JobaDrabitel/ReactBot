<Window x:Class="Tagger.Pages.VerificationCodeDialogPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tagger.Pages"
        mc:Ignorable="d"
        Title="VerificationCodeDialogPage" Height="145" Width="225"
        MaxHeight="145" MaxWidth="225">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Name="Phone" 
                   Content="Аккаунт: "
                   FontSize="16"
                   Margin="5"/>
        </StackPanel>
        <TextBox Margin="5"
                 Height="20"
                 Name="CodeTB"/>
        <StackPanel Orientation="Horizontal">
            <Button Content="Подтвердить" Width="100"
                    FontSize="14" Margin="5" Click="AcceptButtonClick"/>
            <Button Content="Отмена" Width="100"
                    FontSize="14" Margin="5" Click="Button_Click_1"/>
        </StackPanel>
    </StackPanel>
</Window>
